#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/bt.h>
#include "dumbpad.dtsi"

/ {
    chosen {
        zmk,kscan = &kscan0;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;

        diode-direction = "col2row";
         
        col-gpios 
          = <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&pro_micro 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&pro_micro 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&pro_micro 16 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;


         row-gpios 
          = <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
          , <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
          , <&pro_micro 19 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
          , <&pro_micro 18 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
          ;
        };
    };

/   {
    behaviors {
        inc_dec_volume: inc_dec_volume {
            compatible = "zmk,behavior-tap-hold";
            label = "Increase/Decrease Volume";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };
        scroll_behavior: scroll_behavior {
            compatible = "zmk,behavior-tap-hold";
            label = "Scroll Up/Down";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };
    };

        encoders {

        encoder_1: encoder1 {
            compatible = "zmk,behavior-encoder";
            gpios = <&pro_micro 8 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>,
                    <&pro_micro 5 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>,
                    <&pro_micro 9 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
            label = "Encoder 1";
        };

        encoder_2: encoder2 {
            compatible = "zmk,behavior-encoder";
            gpios = <&pro_micro 6 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>,
                    <&pro_micro 5 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>,
                    <&pro_micro 7 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
            label = "Encoder 2";
        };
    };
};