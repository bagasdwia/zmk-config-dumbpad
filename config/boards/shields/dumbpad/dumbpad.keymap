#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>


/ {
        keymap {
                compatible = "zmk,keymap";

// ---------------------------------------
//          BSPC |  7    |  8  |  9   | 
//          EQUAL|  4    |  5  |  6   | 
//          MINUs|  1    |  2  |  3   |      
// | TO(1) | ESC |  0    |  .  | ENT  |
// ---------------------------------------

                default_layer {
                        bindings = <
          &kp BSPC  &kp N7  &kp N8 &kp N9  
          &kp EQUAL &kp N4  &kp N5 &kp N6  
          &kp MINUS &kp N1  &kp N2 &kp N3  
    &mo 1 &kp ESC   &kp DOT &kp N0 &mt RSHFT RET
    >;
        sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN >;
        };

                nav_layer {
// --------------------------------------
//       | 1    |  2    |   3  |   4  |
//       | Q    |  W    |   E  |   R  |
//       | A    |  S    |   D  |   F  |       
// |TO(0)| ESC  |  C    |   B  |   T  |
// --------------------------------------
                        bindings = <
          &kp 1  &kp 2   &kp 3   &kp 4
          &kp Q  &kp W   &kp E   &kp R
          &kp A  &kp S   &kp D   &kp F
    &mo 0 &to ESC  &kp C   &kp B   &kp T
    >;
        sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN >;      
        };
    };
};