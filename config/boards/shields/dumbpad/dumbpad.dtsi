#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/bt.h>

&pro_micro {
    compatible = "zmk,pro-micro";
};

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns =<5>;
        rows = <4>;
        
// ---------------------------------------
//          BSPC |  7    |  8  |  9   | 
//          EQUAL|  4    |  5  |  6   | 
//          MINUs|  1    |  2  |  3   |      
// | TO(1) | ESC |  0    |  .  | ENT  |
// ---------------------------------------
        map = < 
                    RC(0,1) RC(0,2) RC(0,3) RC(0,4)
                    RC(1,1) RC(1,2) RC(1,3) RC(1,4)
                    RC(2,1) RC(2,2) RC(2,3) RC(2,4)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)  
        >;
    };

    encoders {
        compatible = "zmk,encoders";    

        encoder_1: encoder1 {
            compatible = "zmk,behavior-encoder";
            gpios = <&pro_micro 8 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>,
                    <&pro_micro 5 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>,
                    <&pro_micro 9 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
            label = "Encoder 1";
        };

        encoder_2: encoder2 {
            compatible = "zmk,behavior-encoder";
            gpios = <&pro_micro 6 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>,
                    <&pro_micro 5 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>,
                    <&pro_micro 7 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
            label = "Encoder 2";
        };
    };
 };




